{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "request": "launch",
            "runtimeArgs": [
                "./node_modules/.bin/cucumber-js",
                "${file}",
                "--tags",
                "@debug"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "env": {
                "DEBUG": "1"
            },
            "console": "internalConsole",
            "outputCapture": "std"
        },
        {
            "name": "Debug with Inspector",
            "request": "launch",
            "runtimeArgs": [
                "./node_modules/.bin/cucumber-js",
                "${file}",
                "--tags",
                "@debug"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "env": {
                "DEBUG": "pw:api",
                "PWDEBUG": "1"
            },
            "console": "internalConsole",
            "outputCapture": "std"
        },
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
        }
    ]
}